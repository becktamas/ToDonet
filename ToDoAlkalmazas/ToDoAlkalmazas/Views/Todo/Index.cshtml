@model List<ToDoAlkalmazas.Models.TodoItem>
@*Ez a függvény paramétere*@
@{
    ViewBag.Title = "TodoList";
}

<h2>Bevásárlólista!</h2>
@*Mindkét megoldás jó*@
<a href="/Todo/Create">Új felvitele</a>
@*A saját kontrolllerben keresi*@
@Html.ActionLink("Új adat", "Create");


@*Ciklus*@
<ol>
    @foreach (var TodoItemOne in Model)
    {
        if (TodoItemOne.Done)
        {
            <li>
                <strike>@Html.ActionLink(TodoItemOne.Name, "Details", new { id = TodoItemOne.Id })</strike>
                @Html.ActionLink("Módosítás", "Edit", new { id = TodoItemOne.Id })
                @Html.ActionLink("Törlés", "Delete", new { id = TodoItemOne.Id })
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink(TodoItemOne.Name, "Details", new { id = TodoItemOne.Id })
                @Html.ActionLink("Módosítás", "Edit", new { id = TodoItemOne.Id })
                @Html.ActionLink("Törlés", "Delete", new { id = TodoItemOne.Id })
            </li>
        }

    }
</ol>
@using (Html.BeginForm("Create", "ToDo"))
{
    @Html.TextBox("Name")
    @Html.CheckBox("isDone")
    <button>Mentés</button>
}